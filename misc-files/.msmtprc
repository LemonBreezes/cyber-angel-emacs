defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

account ***REMOVED***
host smtp-mail.outlook.com
port 587
tls_starttls on
from ***REMOVED***
user ***REMOVED***
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.password-store/mbsync/***REMOVED***.gpg"

account LemonBreezes@purelymail.com
host smtp.purelymail.com
port 587
tls_starttls on
from LemonBreezes@purelymail.com
user LemonBreezes@purelymail.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.password-store/mbsync/LemonBreezes@purelymail.com.gpg"
