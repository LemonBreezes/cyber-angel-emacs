alias gr     egrep               --color=always                               $*
alias c      xclip               -selection     clipboard                     $*
alias emerge sudo emerge         --color=y --autounmask --autounmask-continue $*
alias tree   tree                -C                                           $*
alias dir    ls                                                               $*
alias dmesg  dmesg               --color=always                               $*
alias layman sudo layman                                                      $*

alias mcd    mkdir -p                                                         $1 && cd $1
alias cd-    cd -
alias cd--   cd -2

alias f     find-file                    $1
alias ff    find-file-other-window       $1
alias bd    eshell-up                    $1
alias l     ls -lh                       $*
alias ll    ls -lah                      $*
alias cdp   cd-to-project
alias clear clear-scrollback
alias gg    cae-unpackaged-magit-status
alias q     exit
alias d     dirvish                      $1 > /dev/null
alias rg    rg                           --color=always                       $*

alias j    z $*p
alias vi   e $*
alias vim  e $*
alias nano e $*
alias vdoom  DOOMDIR=~/.doom-vanilla.d/ ~/doomemacs-vanilla/bin/doom          $*
alias git  git --no-pager $*

alias update-emacs smart-live-rebuild && cd ~/.config/emacs && doom build && git stash && doom upgrade && git stash pop && doom sync
alias update-emacs2 cd ~/.config/emacs && git stash && doom upgrade && git stash pop && doom sync
alias update-gentoo emaint -a sync && emerge -uDUv @world --with-bdeps=y --changed-use --keep-going
alias update-gentoo2 emerge -uDUv @world --with-bdeps=y --changed-use --keep-going
