alias gr     egrep               --color=always                               $*
alias doom   ~/.emacs.d/bin/doom                                              $*
alias c      xclip               -selection     clipboard                     $*
alias emerge sudo emerge         --color=y --autounmask --autounmask-continue $*
alias git    git                 --no-pager                                   $*
alias tree   tree                -C                                           $*
alias rg     rg                  --color=always                               $*
alias dir    ls                                                               $*
alias dmesg  dmesg               --color=always                               $*
alias d      dirvish                                                          $1 > /dev/null

alias mcd    mkdir               -p                                           $1 && cd $1
alias cdp   cd-to-project

alias q     exit
alias clear clear-scrollback
alias ff    find-file-other-window $1

alias vdoom  DOOMDIR=~/.doom-vanilla.d/ ~/doomemacs-vanilla/bin/doom $*
alias doom   DOOMDIR=~/.doom.d/         ~/.emacs.d/bin/doom          $*

alias j    z $*
alias vi   e $*
alias vim  e $*
alias nano e $*
